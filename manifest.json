{
  "manifest_version": 3,
  "name": "Alarm Timer Extension",
  "version": "1.0",
  "description": "A countdown timer overlay on all tabs.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "permissions": ["storage", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["timer.js"]
    }
  ]
}
